<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.weatherforecast.homescreen.view.fragment.HomeFragment"
        android:label="Home">
        <action
            android:id="@+id/action_homeFragment_to_map2"
            app:destination="@id/map2" />
    </fragment>
    <fragment
        android:id="@+id/map2"
        android:name="com.example.weatherforecast.homescreen.map.Map"
        android:label="fragment_map"
        tools:layout="@layout/fragment_map" />
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.example.weatherforecast.homescreen.view.fragment.FavoriteFragment"
        android:label="Favorite" />
    <fragment
        android:id="@+id/settingFragment"
        android:name="com.example.weatherforecast.homescreen.view.fragment.SettingFragment"
        android:label="Setting" />
    <fragment
        android:id="@+id/alertFragment"
        android:name="com.example.weatherforecast.homescreen.view.fragment.AlertFragment"
        android:label="Alert" />
</navigation>